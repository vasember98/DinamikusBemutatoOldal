{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "menu": {
      "type": "array",
      "items": { "$ref": "#/definitions/RawNode" }
    }
  },
  "required": ["menu"],
  "definitions": {
    "RawNode": {
      "type": "array",
      "minItems": 2,
      "maxItems": 3,
      "items": [
        { "type": ["string", "null"], "pattern": "^(\\/|https?:\\/\\/|#).*$" },
        { "type": "string", "minLength": 1 },
        { "type": "array", "items": { "$ref": "#/definitions/RawNode" } }
      ],
      "additionalItems": false,
      "examples": [
        ["/", "főoldal"],
        [null, "csoport (nem link)", [["/child", "Child"]]],
        ["/group", "kattintható csoport", [["/child", "Child"]]]
      ]
    }
  }
}
